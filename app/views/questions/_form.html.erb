    <%= f.label :need_check %><br>
    <%= f.select :need_check, ["なし","教員", "学生"]%>
  </div>
  <div class="field">
    <%= f.label :point %><br>
    <%= f.number_field :point %>
  </div>
  <div class="field">
    <%= f.label :contents %><br>
    <%= f.text_area :contents %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
