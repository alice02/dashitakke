<h1>Listing sources</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Content type</th>
      <th>Filesize</th>
      <th>Code</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.avatar_file_name %></td>
        <td><%= source.content_type %></td>
        <td><%= source.filesize %></td>
        <td><%= source.code %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Source', new_source_path %>
