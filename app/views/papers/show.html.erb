<div class="alert alert-info">
  <h1>
    <span class="label label-info">課題番号</span>
    <%= @paper.index %>
  </h1>
  <h3>
    <span class="label label-info">出題日</span>
    <%= simple_date(@paper.given_date) %>
  </h3>
  <h3>
    <span class="label label-info">出題状態</span>
    <% if @paper.set %>出題済<% else %>未出題<% end %>
  </h3>
</div>

<br>
<% if @paper.set %>
  <%= link_to '出題を取り消す', reset_paper_path(@paper.id), method: :put, class: "btn btn-danger btn-lg" %>
<% else %>
  <%= link_to '出題する', set_paper_path(@paper.id), method: :put, class: "btn btn-primary btn-lg" %>
<% end %>

<hr>
<% if @paper.set %>

<%= render 'papers/students' %>

<% else %>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
    	<th>問題番号</th>
    	<th>要チェック</th>
    	<th>ポイント</th>
    	<th>質問内容</th>
    	<th colspan="2"></th>
    </tr>
</thead>
<tbody>
	<% @paper.questions.each do |question| %>
	<tr>
		<td><%= question.index %></td>
		<td><%= question.need_check %></td>
		<td><%= question.point %></td>
		<td><%= question.contents %></td>
		<td><%= link_to '編集',
                { controller: :questions,
                  action: :edit,
                  :id => question },
                  :class => "btn btn-sm btn-warning" %>
        <%= link_to '削除',
                { controller: :questions,
                  action: :destroy,
                  :id => question },
                  :data => { :confirm => 'Are you sure?' },
                  :class => "btn btn-sm btn-danger",
                  :method => 'delete' %></td>
	<% end %>
  </tr>
</tbody>
</table>
<hr>

<%= bootstrap_form_for @question, :url => {controller: :questions, action: :create, :paper_id => @paper} do |f| %> 

	<div class="field">
		<%= f.label :index %>
    <p><%= @question.index %></p>
		<%= f.hidden_field :index %>
	</div>

	<div class="field">
		<%= f.select :need_check, ["なし","教員", "学生"] %>
	</div>

	<div class="field">
		<%= f.number_field :point %>
	</div>

	<div class="field">
		<%= f.text_area :contents %>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<hr>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %>

<% end %>
